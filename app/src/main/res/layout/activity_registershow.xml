<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:id="@+id/stu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:status="@{null}" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/back"
                android:layout_centerVertical="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_back_3"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#ff333333"
                android:layout_marginRight="10dp"
                android:textSize="18sp"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_200"
            android:text="选择小区"
            android:textSize="@dimen/common_size_15" />

        <TextView
            android:id="@+id/tv_register_show_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/ic_gray_next"
            android:gravity="center_vertical"
            android:hint="请选择您所在小区"
            android:minHeight="@dimen/common_dimen_40" />



        <Button
            android:id="@+id/bt_register_show_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_dimen_40"
            android:layout_marginTop="@dimen/common_dimen_30"
            android:background="@color/color_bt"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="@dimen/common_size_14" />
        </LinearLayout>
    </LinearLayout>
</layout>