<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/community_index_item_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_dimen_10"
        android:text="name"
        android:textColor="@color/color_333"
        android:textSize="@dimen/common_size_14" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_community_index_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/common_dimen_10"
        android:layout_marginRight="@dimen/common_dimen_10" />

</LinearLayout>