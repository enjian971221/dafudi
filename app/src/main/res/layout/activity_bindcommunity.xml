<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/stu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/basebg"
            app:status="@{null}" />

        <com.qmuiteam.qmui.widget.QMUITopBar
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FF962F"
            app:qmui_topbar_title_color="@color/white" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_bind_community_type"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/common_dimen_10"
                    android:paddingRight="@dimen/common_dimen_10">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="类型:"
                        android:textColor="@color/color_999"
                        android:textSize="@dimen/common_size_14" />

                    <TextView
                        android:id="@+id/tv_bind_community_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/ic_gray_next"
                        android:gravity="center_vertical"
                        android:hint="请选择"
                        android:textColor="@color/color_333"
                        android:textColorHint="@color/color_999"
                        android:textSize="@dimen/common_size_14" />
                </LinearLayout>

                <include layout="@layout/common_line_no_margin" />

                <LinearLayout
                    android:id="@+id/ll_bind_community_community"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/common_dimen_10"
                    android:paddingRight="@dimen/common_dimen_10">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="所在小区:"
                        android:textColor="@color/color_999"
                        android:textSize="@dimen/common_size_14" />

                    <TextView
                        android:id="@+id/tv_bind_community_community"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/ic_gray_next"
                        android:gravity="center_vertical"
                        android:hint="请选择"
                        android:textColor="@color/color_333"
                        android:textColorHint="@color/color_999"
                        android:textSize="@dimen/common_size_14" />
                </LinearLayout>

                <include layout="@layout/common_line_no_margin" />

                <LinearLayout
                    android:id="@+id/ll_bind_community_building"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/common_dimen_10"
                    android:paddingRight="@dimen/common_dimen_10">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="楼层房号:"
                        android:textColor="@color/color_999"
                        android:textSize="@dimen/common_size_14" />

                    <TextView
                        android:id="@+id/tv_bind_community_building"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/ic_gray_next"
                        android:gravity="center_vertical"
                        android:hint="请选择"
                        android:textColor="@color/color_333"
                        android:textColorHint="@color/color_999"
                        android:textSize="@dimen/common_size_14" />
                </LinearLayout>

                <include layout="@layout/common_line_no_margin" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/common_dimen_10"
                    android:paddingRight="@dimen/common_dimen_10">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="姓名:"
                        android:textColor="@color/color_999"
                        android:textSize="@dimen/common_size_14" />

                    <EditText
                        android:id="@+id/et_bind_community_name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/white"
                        android:hint="请输入"
                        android:maxLength="6"
                        android:text=""
                        android:textColor="@color/color_333"
                        android:textColorHint="@color/color_999"
                        android:textSize="@dimen/common_size_14" />
                </LinearLayout>

                <include layout="@layout/common_line_no_margin" />

                <LinearLayout
                    android:id="@+id/ll_bind_community_nationality"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/common_dimen_10"
                    android:paddingRight="@dimen/common_dimen_10">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="国籍:"
                        android:textColor="@color/color_999"
                        android:textSize="@dimen/common_size_14" />

                    <TextView
                        android:id="@+id/tv_bind_community_nationality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/ic_gray_next"
                        android:gravity="center_vertical"
                        android:hint="请选择"
                        android:textColor="@color/color_333"
                        android:textColorHint="@color/color_999"
                        android:textSize="@dimen/common_size_14" />
                </LinearLayout>

                <include layout="@layout/common_line_no_margin" />

                <LinearLayout
                    android:id="@+id/ll_bind_community_id_card_type"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/common_dimen_10"
                    android:paddingRight="@dimen/common_dimen_10">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="证件类型:"
                        android:textColor="@color/color_999"
                        android:textSize="@dimen/common_size_14" />

                    <TextView
                        android:id="@+id/tv_bind_community_id_card_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/ic_gray_next"
                        android:gravity="center_vertical"
                        android:hint="请选择"
                        android:textColor="@color/color_333"
                        android:textColorHint="@color/color_999"
                        android:textSize="@dimen/common_size_14" />
                </LinearLayout>

                <include layout="@layout/common_line_no_margin" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/common_dimen_10"
                    android:paddingRight="@dimen/common_dimen_10">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="证件号码:"
                        android:textColor="@color/color_999"
                        android:textSize="@dimen/common_size_14" />

                    <EditText
                        android:id="@+id/et_bind_community_id_card_no"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/white"
                        android:hint="请输入"
                        android:text=""
                        android:textColor="@color/color_333"
                        android:textColorHint="@color/color_999"
                        android:textSize="@dimen/common_size_14" />
                </LinearLayout>

                <include layout="@layout/common_line_no_margin" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/common_dimen_10"
                    android:paddingRight="@dimen/common_dimen_10">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="手机号码:"
                        android:textColor="@color/color_999"
                        android:textSize="@dimen/common_size_14" />

                    <EditText
                        android:id="@+id/et_bind_community_mobile_phone"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/white"
                        android:hint="请输入"
                        android:inputType="number"
                        android:text=""
                        android:textColor="@color/color_333"
                        android:textColorHint="@color/color_999"
                        android:textSize="@dimen/common_size_14" />
                </LinearLayout>

                <include layout="@layout/common_line_no_margin" />

                <LinearLayout
                    android:id="@+id/ll_bind_community_gender"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/common_dimen_10"
                    android:paddingRight="@dimen/common_dimen_10">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="性别:"
                        android:textColor="@color/color_999"
                        android:textSize="@dimen/common_size_14" />

                    <TextView
                        android:id="@+id/tv_bind_community_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/ic_gray_next"
                        android:gravity="center_vertical"
                        android:hint="请选择"
                        android:textColor="@color/color_333"
                        android:textColorHint="@color/color_999"
                        android:textSize="@dimen/common_size_14" />
                </LinearLayout>

                <include layout="@layout/common_line_no_margin" />

                <LinearLayout
                    android:id="@+id/ll_bind_community_ethnic_group"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/common_dimen_10"
                    android:paddingRight="@dimen/common_dimen_10">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="民族:"
                        android:textColor="@color/color_999"
                        android:textSize="@dimen/common_size_14" />

                    <TextView
                        android:id="@+id/tv_bind_community_ethnic_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/ic_gray_next"
                        android:gravity="center_vertical"
                        android:hint="民族"
                        android:textColor="@color/color_333"
                        android:textColorHint="@color/color_999"
                        android:textSize="@dimen/common_size_14" />
                </LinearLayout>

                <include layout="@layout/common_line_no_margin" />

                <LinearLayout
                    android:id="@+id/ll_bind_community_bot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/common_dimen_10"
                        android:paddingRight="@dimen/common_dimen_10">

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="状态审核:"
                            android:textColor="@color/color_999"
                            android:textSize="@dimen/common_size_14" />

                        <TextView
                            android:id="@+id/tv_bind_community_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:hint=""
                            android:textColor="@color/color_333"
                            android:textColorHint="@color/color_999"
                            android:textSize="@dimen/common_size_14" />
                    </LinearLayout>

                    <include layout="@layout/common_line_no_margin" />

                    <LinearLayout
                        android:id="@+id/ll_bind_community_commnet"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/common_dimen_10"
                        android:paddingRight="@dimen/common_dimen_10"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="说明:"
                            android:textColor="@color/color_999"
                            android:textSize="@dimen/common_size_14" />

                        <TextView
                            android:id="@+id/tv_bind_community_commnet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:hint=""
                            android:textColor="@color/color_333"
                            android:textColorHint="@color/color_999"
                            android:textSize="@dimen/common_size_14" />
                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/bind_community_submit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/common_dimen_10"
                    android:layout_marginTop="@dimen/common_dimen_20"
                    android:layout_marginRight="@dimen/common_dimen_10"
                    android:layout_marginBottom="@dimen/common_dimen_20"
                    android:background="@color/color_bt"
                    android:text="提交"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common_size_14"
                    android:visibility="gone" />


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</layout>