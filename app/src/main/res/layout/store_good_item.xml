<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout style="@style/common_lin_h_padd10">

        <ImageView
            android:id="@+id/store_good_item_icon"
            android:layout_width="@dimen/common_dimen_90"
            android:layout_height="@dimen/common_dimen_70"
            android:scaleType="centerCrop" />

        <LinearLayout
            style="@style/common_linearlayout_wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/common_dimen_5">

            <TextView
                android:id="@+id/store_good_item_name"
                style="@style/common_tv_wrap_333"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="name" />

            <TextView
                android:id="@+id/store_good_item_unit"
                style="@style/common_tv_wrap_333"
                android:text="unit"
                android:textColor="@color/color_999"
                android:textSize="@dimen/common_size_12" />

            <TextView
                android:id="@+id/store_good_item_member_price"
                style="@style/common_tv_wrap_333"
                android:layout_marginTop="@dimen/common_dimen_3"
                android:text="0"
                android:textColor="@color/bbl_ff0000"
                android:textSize="@dimen/common_size_12" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/common_line_no_margin" />
</LinearLayout>